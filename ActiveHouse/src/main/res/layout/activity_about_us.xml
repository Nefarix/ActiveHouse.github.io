
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.activehouse.AboutUs"
    android:background="@color/colorTextDark">


    <TextView
        android:id="@+id/aboutUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="@string/aboutUs"
        android:textColor="@color/colorBG"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/Oliver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/aboutUs"
        android:layout_marginTop="50dp"
        android:text="@string/oliver"
        android:textColor="@color/colorBG" />

    <TextView
        android:id="@+id/Patrick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Oliver"
        android:layout_centerHorizontal="true"
        android:text="@string/patrick"
        android:textColor="@color/colorBG" />

    <TextView
        android:id="@+id/Ryan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Patrick"
        android:layout_alignParentEnd="true"
        android:text="@string/ryan"
        android:textColor="@color/colorBG" />

</RelativeLayout>


